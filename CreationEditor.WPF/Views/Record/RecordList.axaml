<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:CreationEditor.WPF.Views.Record">
    <Design.PreviewWith>
        <controls:RecordList />
    </Design.PreviewWith>

    <Style Selector="controls|RecordList">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <DataGrid x:Name="PART_RecordGrid"
                              Items="{Binding Records, RelativeSource={RelativeSource TemplatedParent}}"
                              SelectedItem="{Binding SelectedRecord, RelativeSource={RelativeSource TemplatedParent}}"
                              CanUserSortColumns="True"
                              CanUserReorderColumns="True" CanUserResizeColumns="True"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <!-- <DataGrid.InputBindings> -->
                        <!--     <MouseBinding MouseAction="LeftDoubleClick" -->
                        <!--                   Command="{Binding EditSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" /> -->
                        <!--     <KeyBinding Key="Delete" -->
                        <!--                 Command="{Binding DeleteSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" /> -->
                        <!--     <KeyBinding Key="D" Modifiers="Control" -->
                        <!--                 Command="{Binding DuplicateSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" /> -->
                        <!-- </DataGrid.InputBindings> -->
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="New"
                                          Command="{Binding NewRecord, RelativeSource={RelativeSource TemplatedParent}}" />
                                <MenuItem Header="Edit"
                                          Command="{Binding EditSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" />
                                <MenuItem Header="Duplicate"
                                          Command="{Binding DuplicateSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" />
                                <MenuItem Header="Delete"
                                          Command="{Binding DeleteSelectedRecord, RelativeSource={RelativeSource TemplatedParent}}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="EditorID" Binding="{Binding Record.EditorID, Mode=OneWay}"
                                                Width="200"
                                                CanUserSort="True" />
                            <DataGridTextColumn Header="FormKey" Binding="{Binding Record.FormKey, Mode=OneWay}"
                                                Width="100"
                                                CanUserSort="True" />
                            <DataGridTextColumn Header="Use Info" Binding="{Binding References.Count, Mode=OneWay}"
                                                Width="75"
                                                CanUserSort="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- <mah:ProgressRing -->
                    <!--     IsActive="{Binding IsBusy, RelativeSource={RelativeSource TemplatedParent}}" -->
                    <!--     HorizontalAlignment="Left" VerticalAlignment="Top" -->
                    <!--     HorizontalContentAlignment="Center" VerticalContentAlignment="Center" -->
                    <!--     Width="100" Height="100" -->
                    <!--     Margin="50" /> -->
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

