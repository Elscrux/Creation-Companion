<UserControl x:Class="CreationEditor.WPF.Views.NotificationView"
                 xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:models="clr-namespace:CreationEditor.WPF.Models"
                 mc:Ignorable="d" d:DataContext="{d:DesignInstance models:NotificationItem}"
                 d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock FontSize="16" Text="{Binding LoadText}"
                   TextAlignment="Center"/>
        <ProgressBar Minimum="0" Maximum="1" 
                     Value="{Binding LoadProgress}"
                     Height="10"
                     IsVisible="{Binding AnyProgress}"/>
    </StackPanel>
</UserControl>
