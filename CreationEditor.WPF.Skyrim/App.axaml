<Application x:Class="CreationEditor.WPF.Skyrim.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skyrim="clr-namespace:CreationEditor.WPF.Skyrim"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:converters="clr-namespace:CreationEditor.WPF.Utility.Converters;assembly=CreationEditor.WPF">
    <Application.DataTemplates>
        <skyrim:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <!-- Base Avalonia Style -->
        <styling:FluentAvaloniaTheme PreferSystemTheme="True" />
        
        <!-- Avalonia Addons Style -->
        <DockFluentTheme/>
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToBlurConverter x:Key="BooleanToBlurConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>