<Application x:Class="CreationEditor.WPF.Skyrim.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skyrim="clr-namespace:CreationEditor.WPF.Skyrim"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia">
    <Application.DataTemplates>
        <skyrim:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <!-- Base Avalonia Style -->
        <styling:FluentAvaloniaTheme PreferSystemTheme="True" />
        <StyleInclude Source="avares://FluentAvalonia.UI.Windowing/Styles/FAWindowingStyles.axaml" />

        <!-- Avalonia Addons Style -->
        <DockFluentTheme />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml" />

        <!-- Custom Style -->
        <StyleInclude Source="avares://CreationEditor.WPF/Resources/Style/Styles.axaml" />
        <StyleInclude Source="avares://CreationEditor.WPF/FormKeyPicker/FormKeyPicker.axaml" />
        <StyleInclude Source="avares://CreationEditor.WPF/FormKeyPicker/FormKeyBox.axaml" />
    </Application.Styles>
</Application>