<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        xmlns:basic="clr-namespace:CreationEditor.Avalonia.Views.Basic">
    <Design.PreviewWith>
        <basic:Card
            MinWidth="250"
            Margin="10"
            Header="Name"
            Description="Description"
            Icon="Contact">
            <TextBox Watermark="Enter your name"/>
        </basic:Card>
    </Design.PreviewWith>

    <Style Selector="basic|Card">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{DynamicResource CardBackgroundFillColorDefault}"
                        BorderBrush="{DynamicResource CardStrokeColorDefault}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <Grid RowDefinitions="Auto,16,*">
                        <StackPanel
                            Grid.Row="0"
                            Orientation="Horizontal"
                            Spacing="12">
                            <!-- Icon -->
                            <Grid>
                                <controls:SymbolIcon
                                    IsVisible="{TemplateBinding IconControl, Converter={x:Static ObjectConverters.IsNull}}"
                                    Symbol="{TemplateBinding Icon}"
                                    FontSize="20"
                                    Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>

                                <ContentPresenter
                                    IsVisible="{TemplateBinding IconControl, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Content="{TemplateBinding IconControl}"
                                    FontSize="20"
                                    Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                            </Grid>

                            <!-- Text -->
                            <StackPanel Spacing="2">
                                <TextBlock Text="{TemplateBinding Header}"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{TemplateBinding Description}"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <ContentPresenter
                            Grid.Row="2"
                            x:Name="PART_ContentPresenter"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
