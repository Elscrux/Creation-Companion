<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prefix="clr-namespace:CreationEditor.Avalonia.ViewModels.Record.Prefix"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CreationEditor.Avalonia.Views.Record.RecordPrefixPicker"
             x:DataType="prefix:RecordPrefixVM">
    <TextBox Text="{Binding RecordPrefixService.Prefix, Mode=TwoWay}"
             Watermark="Enter a prefix for your records"/>
</UserControl>