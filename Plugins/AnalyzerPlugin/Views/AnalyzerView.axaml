<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:AnalyzerPlugin.ViewModels"
    xmlns:basic="clr-namespace:CreationEditor.Avalonia.Views.Basic;assembly=CreationEditor.Avalonia"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:constants="clr-namespace:CreationEditor.Avalonia.Constants;assembly=CreationEditor.Avalonia"
    xmlns:mod="clr-namespace:CreationEditor.Avalonia.Views.Mod;assembly=CreationEditor.Avalonia"
    xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    xmlns:topics="clr-namespace:Mutagen.Bethesda.Analyzers.SDK.Topics;assembly=Mutagen.Bethesda.Analyzers.SDK"
    xmlns:converter="clr-namespace:CreationEditor.Avalonia.Converter;assembly=CreationEditor.Avalonia"
    xmlns:views="clr-namespace:AnalyzerPlugin.Views"
    xmlns:collections="clr-namespace:Avalonia.Collections;assembly=Avalonia.Base"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    mc:Ignorable="d"
    d:DesignWidth="1400"
    d:DesignHeight="800"
    x:Class="AnalyzerPlugin.Views.AnalyzerView"
    x:DataType="viewModels:AnalyzerVM">
    <Grid
        RowDefinitions="*"
        Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="350"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition
                Width="2*"
                MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar with right margin for spacing -->
        <Border
            Grid.Column="0"
            Classes="Card">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="10">
                    <!-- Configuration Header -->
                    <basic:Header
                        Header="Analyzer Configuration"
                        Description="Select which mods and topics to include in the analysis"
                        Icon="Checkmark"/>

                    <!-- Divider -->
                    <Separator/>

                    <!-- Mods Selection Card -->
                    <basic:Card
                        Header="Mod Selection"
                        Description="Select which mods to analyze"
                        Icon="Save">
                        <StackPanel
                            Spacing="8">
                            <mod:ModPickerButton
                                CornerRadius="8"
                                DataContext="{Binding ModPickerVM}"/>

                            <Grid
                                Height="18">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{x:Static constants:StandardBrushes.InvalidBrush}"
                                    IsVisible="{Binding !ModPickerVM.SelectedMods^.Count}"
                                    Text="Select at least one mod to continue"/>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiary}"
                                    IsVisible="{Binding ModPickerVM.SelectedMods^.Count}"
                                    Text="{Binding ModPickerVM.SelectedMods^.Count, StringFormat='{}{0} mod(s) selected'}"/>
                            </Grid>
                        </StackPanel>
                    </basic:Card>

                    <!-- Severity Filter Card -->
                    <basic:Card
                        Header="Minimum Severity"
                        Description="Display issues at or above this severity level"
                        Icon="Alert">
                        <ComboBox
                            ItemsSource="{x:Static viewModels:AnalyzerVM.AllSeverities}"
                            SelectedItem="{Binding MinimumSeverity}"
                            Padding="12,10"
                            CornerRadius="8">
                            <ComboBox.ItemTemplate>
                                <DataTemplate
                                    DataType="topics:Severity">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="12">
                                        <Rectangle
                                            Width="12"
                                            Height="12"
                                            RadiusX="2"
                                            RadiusY="2"
                                            Fill="{Binding Converter={x:Static viewModels:AnalyzerVM.SeverityToBrushConverter}}"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="{Binding}"
                                            VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </basic:Card>

                    <!-- Topics Selection Card -->
                    <basic:Card
                        Header="Topic Selection"
                        Description="Select topics to analyze"
                        Icon="List">
                        <StackPanel Spacing="8">
                            <Button
                                Padding="12,10"
                                CornerRadius="8"
                                Background="{DynamicResource ButtonBackground}"
                                BorderBrush="{DynamicResource ButtonBorderBrush}"
                                BorderThickness="1">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock
                                        Text="Browse Topics"
                                        VerticalAlignment="Center"/>
                                    <controls:SymbolIcon
                                        Grid.Column="1"
                                        Symbol="ChevronRight"
                                        Margin="8,0,0,0"/>
                                </Grid>

                                <Button.Flyout>
                                    <Flyout FlyoutPresenterClasses="Flyout750x300">
                                        <views:TopicSelection/>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                            <Grid Height="18">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorSecondary}"
                                    IsVisible="{Binding !ActiveTopicCount^}"
                                    Text="Select at least one topic to continue"/>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiary}"
                                    IsVisible="{Binding !!ActiveTopicCount^}"
                                    Text="{Binding ActiveTopicCount^, StringFormat='{}{0} topic(s) selected'}"/>
                            </Grid>
                        </StackPanel>
                    </basic:Card>

                    <!-- Divider -->
                    <Separator
                        Height="1"
                        Margin="0,8"/>

                    <!-- Primary Action Button -->
                    <Button
                        Classes="Primary Accent"
                        Command="{Binding Analyze}">
                        <Button.IsEnabled>
                            <MultiBinding
                                Converter="{x:Static BoolConverters.And}">
                                <Binding
                                    Path="ModPickerVM.SelectedMods^"
                                    Converter="{x:Static converter:ListConverters.Any}"/>
                                <Binding
                                    Path="!!ActiveTopicCount^"/>
                            </MultiBinding>
                        </Button.IsEnabled>

                        <Grid
                            ColumnDefinitions="*,Auto"
                            HorizontalAlignment="Center">
                            <TextBlock
                                Grid.Column="0"
                                Text="Start Analysis"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                            <avaloniaProgressRing:ProgressRing
                                Grid.Column="1"
                                IsVisible="{Binding Analyze.IsExecuting^}"
                                Width="18"
                                Height="18"/>
                        </Grid>
                    </Button>

                    <!-- Help Text -->
                    <TextBlock
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorTertiary}"
                        Text="Configure settings, then click Start to analyze your mods"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel: Results -->
        <Border
            Grid.Column="2"
            Classes="Card">
            <Grid
                RowDefinitions="Auto,8,*">

                <!-- Results Header -->
                <basic:Header
                    Grid.Row="0"
                    Header="Analysis Results"
                    Description="{Binding Results.Count, StringFormat='{}{0} issues found'}"
                    Icon="List"/>

                <!-- Results Content -->
                <Grid
                    Grid.Row="2"
                    RowDefinitions="Auto,12,*">

                    <!-- Results Toolbar -->
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal"
                        Spacing="12"
                        IsVisible="{Binding Results.Count}">
                        <!-- Search Box -->
                        <TextBox
                            MinWidth="280"
                            Text="{Binding ResultsSearchText}"
                            Watermark="Search results..."
                            Padding="12,8"
                            CornerRadius="6"/>

                        <!-- Group By Button -->
                        <Button
                            ToolTip.Tip="Group results by different categories"
                            Padding="10,8"
                            CornerRadius="6">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <controls:SymbolIcon
                                    Symbol="Pin"
                                    FontSize="16"/>
                                <TextBlock
                                    Text="Group"/>
                            </StackPanel>

                            <Button.Flyout>
                                <Flyout Placement="Bottom">
                                    <StackPanel
                                        Spacing="12"
                                        Margin="12">
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Group Results By"/>
                                        <CheckBox
                                            Content="Record Type"
                                            IsChecked="{Binding IsResultsGroupedByRecordType}"/>
                                        <CheckBox
                                            Content="Record"
                                            IsChecked="{Binding IsResultsGroupedByRecord}"/>
                                        <CheckBox
                                            Content="Severity"
                                            IsChecked="{Binding IsResultsGroupedBySeverity}"/>
                                        <CheckBox
                                            Content="Topic"
                                            IsChecked="{Binding IsResultsGroupedByTopic}"/>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>

                    <!-- Empty State -->
                    <basic:StepByStepTutorial
                        Grid.Row="2"
                        IsVisible="{Binding !Results.Count}"
                        Header="No Analysis Results"
                        Description="Run an analysis to see results here"
                        Icon="List">
                        <basic:StepByStepTutorial.Steps>
                            <collections:AvaloniaList x:TypeArguments="system:String">
                                <system:String>1. Select mods on the left sidebar</system:String>
                                <system:String>2. Choose analysis topics via "Browse Topics"</system:String>
                                <system:String>3. Click "Start Analysis" to begin</system:String>
                            </collections:AvaloniaList>
                        </basic:StepByStepTutorial.Steps>
                    </basic:StepByStepTutorial>

                    <!-- Results Tree -->
                    <Border
                        Grid.Row="2"
                        Classes="CardNested">
                        <TreeDataGrid
                            x:Name="ResultsTree"
                            IsVisible="{Binding Results.Count}"
                            Source="{Binding ResultsTreeSource}"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>