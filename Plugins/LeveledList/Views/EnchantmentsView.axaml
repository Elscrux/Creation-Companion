<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:LeveledList.ViewModels"
             xmlns:folder="clr-namespace:CreationEditor.Avalonia.Views.Asset.Picker.Folder;assembly=CreationEditor.Avalonia"
             xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:converter="clr-namespace:CreationEditor.Avalonia.Converter;assembly=CreationEditor.Avalonia"
             xmlns:basic="clr-namespace:CreationEditor.Avalonia.Views.Basic;assembly=CreationEditor.Avalonia"
             xmlns:collections="clr-namespace:Avalonia.Collections;assembly=Avalonia.Base"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:views="clr-namespace:LeveledList.Views"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
             x:Class="LeveledList.Views.EnchantmentsView"
             x:DataType="viewModels:EnchantmentsVM">
    <!-- Split Panel Layout: Left = Configuration, Right = Preview & Generate -->
    <Grid Margin="0,0,0,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*"
                MinWidth="500"/>
            <ColumnDefinition
                Width="12"/>
            <ColumnDefinition
                Width="2*"
                MinWidth="750"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Configuration -->
        <Border Grid.Column="0"
                Classes="Card">
            <Grid RowDefinitions="Auto,24,Auto,24,*">
                <!-- Header -->
                <basic:Header
                    Grid.Row="0"
                    Header="Enchantment Configuration"
                    Description="Configure which enchantments to generate and how they should be modified"
                    Icon="Star"/>

                <Separator Grid.Row="1"/>

                <!-- Configuration Options -->
                <views:WorkflowConfiguration
                    Grid.Row="2"
                    DataContext="{Binding GenerationConfig}"/>

                <Separator Grid.Row="3"/>

                <!-- Definitions Section -->
                <Grid
                    Grid.Row="4"
                    RowDefinitions="Auto,8,Auto,4,*">
                    <basic:SectionHeader
                        Grid.Row="0"
                        Header="Enchantment Definitions"
                        Description="Select the folder containing enchantment definition files:"
                        Icon="Folder"/>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Spacing="4">
                        <Button Command="{Binding ReloadDefinitions}"
                                HorizontalAlignment="Left"
                                IsVisible="{Binding GenerationConfig.DefinitionsFolderPath, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <controls:SymbolIcon Symbol="Refresh"
                                                     FontSize="14"/>
                                <TextBlock Text="Reload"/>
                            </StackPanel>
                        </Button>

                        <folder:TextFolderPicker
                            x:Name="FolderPicker"
                            Watermark="Select Definition Folder..."
                            HorizontalAlignment="Stretch"
                            MinHeight="36"
                            FolderPath="{Binding GenerationConfig.DefinitionsFolderPath, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Definitions List -->
                    <Border Grid.Row="4"
                            Classes="CardNested">
                        <DataGrid
                            x:Name="ListsDataGrid"
                            ItemsSource="{Binding EnchantmentsDefinitions}"
                            SelectionMode="Extended"
                            VerticalAlignment="Top"
                            CanUserResizeColumns="True"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            GridLinesVisibility="None"
                            Classes="NoCellSelection">
                            <DataGrid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuItem Header="Open File"
                                              Click="OpenFile"/>
                                </MenuFlyout>
                            </DataGrid.ContextFlyout>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File"
                                                    Binding="{Binding FileName}"/>
                                <DataGridTextColumn Header="Type"
                                                    Binding="{Binding EnchantmentsDefinition.Type}"/>
                                <DataGridTextColumn Header="EditorID Suffix"
                                                    Binding="{Binding EnchantmentItem.Suffix}"/>
                                <DataGridTextColumn Header="Enchantment Levels"
                                                    Binding="{Binding EnchantmentItem.Tiers.Keys, Converter={x:Static converter:ListConverters.JoinToString}, ConverterParameter=', '}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1"
                      Background="Transparent"/>

        <!-- RIGHT PANEL: Preview & Generate -->
        <Border Grid.Column="2"
                Classes="Card">
            <Grid RowDefinitions="Auto,8,Auto,8,*,16,Auto">
                <!-- Header -->
                <basic:Header
                    Grid.Row="0"
                    Header="Preview &amp; Generate"
                    Description="Review the enchantment variants that will be generated"
                    Icon="Preview"/>

                <!-- Filter -->
                <TextBox Grid.Row="2"
                         Watermark="Filter preview by EditorID..."
                         Text="{Binding GenerationConfig.FilterText}"/>

                <!-- Preview Tree -->
                <Border Grid.Row="4"
                        Classes="CardNested">
                    <Grid>
                        <TreeDataGrid
                            Source="{Binding EnchantmentsSource}">
                        </TreeDataGrid>

                        <avaloniaProgressRing:ProgressRing
                            IsActive="{Binding GenerationConfig.IsBusy^}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="80"
                            Height="80"/>

                        <basic:StepByStepTutorial
                            IsVisible="{Binding !EnchantedItems.Count}"
                            Header="Preview and generate your enchantments"
                            Description="Select the enchantments you want to generate"
                            Icon="StarAdd">
                            <basic:StepByStepTutorial.Steps>
                                <collections:AvaloniaList x:TypeArguments="system:String">
                                    <system:String>Make sure you have assigned tiers to your enchantables in the Record Browser!</system:String>
                                    <system:String>1. Select mod(s) to generate enchantments for</system:String>
                                    <system:String>2. Load and select enchantment definitions</system:String>
                                    <system:String>4. Review the generated enchantment variants</system:String>
                                    <system:String>5. Click 'Generate All' to create the enchantments in your load order</system:String>
                                </collections:AvaloniaList>
                            </basic:StepByStepTutorial.Steps>
                        </basic:StepByStepTutorial>
                    </Grid>
                </Border>

                <!-- Action Bar -->
                <Grid Grid.Row="6"
                      ColumnDefinitions="*,Auto">
                    <!-- Count Info -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="8"
                                VerticalAlignment="Center">
                        <controls:SymbolIcon
                            Symbol="Document"
                            FontSize="16"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock
                            Text="{Binding EnchantedItems.Count, StringFormat='{}{0} variants ready to generate'}"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            FontSize="13"
                            VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Generate Button -->
                    <Button Grid.Column="1"
                            Classes="Secondary Accent"
                            IsEnabled="{Binding EnchantedItems.Count}"
                            Command="{Binding GenerateEnchantments}">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <controls:SymbolIcon Symbol="Play"
                                                 FontSize="16"
                                                 Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                            <TextBlock Text="Generate All"
                                       Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>